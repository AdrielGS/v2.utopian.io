@import "~variables"

body.mobile {
  div.u-comments-author-header {
    .flex.header-container {
      justify-content center
    }
  }

}
div.u-comments-author-header {
  margin-bottom 15px


  .avatar {
    img {
      height 60px
      width 60px
      border-radius 50%
      box-shadow 0 0 1px 1px rgba(0, 0, 0, 0.1)
    }
  }
  .details {
    & > div {
      line-height 1.4em
    }
    div.username {
      font-size 16px
      font-weight 600
      span.username {
        // font-weight normal
        padding-left 5px
      }
    }
    div.about, div.location {
      color $grey-7
      font-size 14px
    }
    padding-left 15px
    display flex
    flex-direction column
    div.reputation {
      padding-left 4px
      margin-top -4px
      text-align right
      span {
        color white
        background $primary
        border none
        line-height 10px
        border-radius 2px
        margin-top -2px
        padding 0 3px
        font-size: 12px
        font-weight 700
      }
    }
  }
}
