@import "~variables"

.project-banner {
  .q-layout-page{
    min-height auto !important
  }

  .project-image {
    width 100%
    height 376px
  }

  .project-description {
    padding 0 20px
    .project-avatar {
      height 45px
      width 45px
      border-radius 50%
    }
    .project-name {
      padding 0px 10px
    }
    .project-owner-avatar {
      height 20px
      width 20px
      border-radius 50%
    }

    .project-created-by {
      padding 0 5px
    }

    .project-separator {
      padding-bottom 6px
      border-bottom 1px solid $grey-4
    }

    .project-stats {
      .q-icon {
        margin-right 10px
      }
      .q-headline {
        font-size 17px
      }
      .q-body-1 {
        font-size 10px
      }
      .row {
        padding 6px 0
      }
    }

    .project-buttons {
      .q-btn {
        max-width 48%

        i {
          padding-right 10px
        }
      }
    }
  }
}

.q-tabs {
  border solid 1px #eee  
  .q-tabs-bar {
    border-color $primary !important
  }
}

.right-side-slot {
  padding-top 22px
  padding-left 20px
  .q-list {
    margin-top 30px
    margin-bottom 30px
    padding 0 10px
    background-color #fff
  }

  .recent-task-requests {
    .q-icon {
      margin-right 10px
    }
  }
}