@import "~variables"

div.q-layout-page.u-page.u-page-search, main.q-layout-page.u-page.u-page-search {
  padding: 12px 24px
}
.desktop {
  .u-page.u-page-search {
    .u-filters {
      .q-collapsible-inner {
        & > .q-item {
          display none
        }
      }
    }
  }
}
.u-page.u-page-project-search {
  .u-search-field {
    width 400px
  }

  .q-card-media {
    width 99.95%
    img {
      object-fit cover
      width 212.5px
      height 212.5px
    }

    .q-card-title {
      font-size 30px
      margin-bottom 5px
    }

    display flex
    .project-owner-avatar {
      height 20px
      width 20px
      border-radius 50%
    }

    .project-created-by {
      padding 0 5px
    }
  }

  .projects {
    .q-card-title {
      line-height 1em
      font-size 1.2em
      color $grey-9
    }
    .q-card-media {
      height 210px
      background-size cover
      background-position center center
    }
    .q-card {
      min-height 420px
      box-shadow none
      border solid 1px #e0e2e5
    }
    .q-card-main {
      font-size 1rem
    }
    .short-description {
      height 75px
    }
    .tags {
      white-space word-wrap
      padding-bottom 10px
    }
    .tag {
      color $grey-7 !important
      background-color $grey-3 !important
      border none !important
      margin-right 5px
      &:last-child {
        margin-right 0
      }
    }
    .author {
      display flex
      font-weight 600
      .author-details {
        .name {
          line-height 14px
          font-size 14px
          vertical-align middle
        }
      }
    }
    .avatar {
      margin-right 5px
      img {
        width 28px
        height 28px
        border-radius 4px
      }
    }
  }
  .u-filters {
    .q-field-label-inner {
      font-size 15px
      min-height 22px
      line-height 22px
    }
    .q-field-content {
      padding-top 0
    }

    padding 0
    .q-collapsible-sub-item {
      padding-left 0
      padding-top 0

    }
  }
  .row-filters {

    .q-btn-dropdown {
      font-size 16px
    }
    .q-btn-inner {
      text-transform capitalize
    }
  }
  .row-filters + .row-filters {
    // margin-top 20px
  }
  .field-order {
    .q-list {
      padding 0
    }
    .q-field-content {
      padding-top 0
    }
    .q-btn {
      padding 2px
      min-height 20px
    }
    .q-focus-helper {
      height 24px
      display none
    }
  }
  .u-label {
    font-size 12px
    color $form-dark
  }
  .q-item {
    overflow hidden
  }

  .q-infinite-scroll-message {
    text-align center
  }

  .select-category {
    border: 1px solid $primary
    padding 4px 0
    border-radius 4px
    color $primary
    .q-item-label {
      text-transform uppercase
    }
    .q-input-target {
      color $primary
      text-transform uppercase
    }
  }

  .q-list.posts-list {
    padding 0
    .q-item {
      border-radius 4px
      background white !important
      border 1px solid $grey-4
      margin-bottom 15px
      padding-top 15px
      padding-bottom 15px
    }
  }
}
