u-layout-page.u-page-index(:meta="false")
  template(slot="main")
    div.row
      div.col-md-10.offset-md-1.subheader.q-subheading
        router-link(:to="{ name: 'home' }") PROJECTS
        router-link(:to="{ name: 'contributions' }") CONTRIBUTIONS
        router-link(:to="{ name: 'home' }") WALLET
        router-link(:to="{ name: 'home' }") SPONSORS
        router-link(:to="{ name: 'home' }") MODERATORS
      div.col-md-10.offset-md-1.projects-slider
        q-carousel.shadow-2(color="white", height="380px")
          q-carousel-slide(v-for="project in projects", :img-src="project.image", :key="project.name")

          // spinner for infinite scroll loading.
          q-spinner-dots(slot="message", :size="40", style="margin: 0 auto")
        div.project-info.shadow-8






