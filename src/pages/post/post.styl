@import "~variables"

.q-layout-page {
  overflow visible !important
}

.q-popover {
  border-radius 4px
  padding 0

}

body.mobile {
  .u-page-post {
    .row-author {
      flex-direction column
      justify-content center
      //.text-right {
      //  text-align center
      //  //
      //}
    }
  }
}

.u-page-post {

  .text-right {
    justify-content space-between
    margin-left auto
  }

  .post-actions {
    margin 40px 0
  }

  hr {
    border-top 1px solid $grey-4
    border-bottom 0
    height 1px
    background none
    overflow hidden
    // border-collapse collapse
  }
  .post-replies {

    .replies-title {
      font-size 24px
      text-transform uppercase
      font-weight 800
      margin-bottom 30px
      letter-spacing 0.025em
    }

    // margin-top 120px
  }
  .post-content {
    .post-body {
      // background darken(white, 1%)
    }
    border: 1px solid #f5f5f5;

    padding: 24px;
    border-radius: 4px;
    // max-width 850px
    max-width 100%
    //padding 0 0
    .time-ago {
      padding-top 5px
      font-size 14px
      font-weight normal
      opacity 0.8
    }
    .row-author {
      margin-bottom 20px
      .author-details {
        display flex
        flex-direction row
        justify-content flex-start
        .name {
          line-height 32px
          font-size 16px
          padding-bottom 0
        }
        .reputation, .reputation span {
          font-size 12px
          line-height 36px
          margin-left 5px
        }
      }
    }
    .post-title {
      font-size 28px
      font-weight 700
      margin 30px 0
      padding 0
    }
    .post-body {
      padding 0
    }
  }

  .u-page-meta > div {
    padding-right 20px
    padding-left 20px
    margin 10px 0
    &:first-child {
      margin-top 26px
      text-align left
    }
  }
  .q-item-label {
    font-size 26px
  }
  .row.row-category {
    div {

      text-transform uppercase
      font-size 18px
      // color: $primary
      font-weight 600
      .q-icon {
        margin-right 5px
      }
    }
  }

  .row.row-stats {
    .stats {
      font-weight 600
      font-size 16px
      .q-icon {
        font-weight 600
        opacity 0.6
        margin-right 4px
      }
      display flex
      .likes {
        margin-left 8px
      }
    }
  }
  .row.row-rewards {
    font-size 20px
    margin 40px 0 0 0
    font-weight 600
    font-family 'Roboto'

  }
  .u-post-author {
    // padding-top 20px
  }
  .tag {
    margin-left 5px
    margin-top 5px
  }
  .tags {

    // line-height 2em
    // margin-top 20px
    white-space word-wrap

    .q-btn.tag {
      line-height 1em
      padding 0.285em 0.5em
      font-weight 600
      letter-spacing 0.025em
      font-size 11px
      // padding 0.1em
      .q-btn-inner {
        line-height 1em
      }
    }
  }
  .row.row-tags {
    .tag {
      margin-left 5px
      margin-top 5px
    }
    .tags {
      line-height 2em
      margin-top 20px
      white-space word-wrap
      display flex
      flex-direction column
      .q-btn.tag {
        line-height 1em
        padding 0.285em 0.5em
        font-weight 600
        font-size 14px
        // padding 0.1em
        .q-btn-inner {
          line-height 1em
        }
      }
    }
  }

}
