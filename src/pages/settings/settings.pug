// settings page template.
u-layout-page.u-page-settings

  // meta column.
  template(slot="meta")
    div.row.justify-center
      span Settings.


  // settings form fields.
  div.row.flex.justify-center(slot="main")
    div.col-12
      q-field(:label="$t('common.language')", orientation="vertical")
        q-select(:options="languages", v-model="lang")
      q-field(icon="mdi-thumbs-up-down", label="Payment", orientation="vertical", helper="Amount you are willing to spend (in USD)")
        q-slider.dark(v-model="preferences.voteWeight", :markers="true", :snap="true", :min="0", :max="100", :step="20" :label-always="true")
