// variables import.
@import "~variables"
@import "~quasar-framework/src/css/core/helpers.styl"
@import "~quasar-framework/src/css/core/flex.styl"
@import "~quasar-framework/src/css/core/size.styl"
@import "~quasar-framework/src/css/core/mouse.styl"

.q-tooltip {
  background $primary
}

// main drawer class.
.u-drawer {
  transition: left 0.5s ease;
  width: 70px
  &.collapsed {
    width: 70px
    div.u-drawer-brand {
      .q-item-main {
        text-align center
      }
      .q-item {
        img {
          margin-left 0
        }
      }
    }
  }
  .u-drawer-avatar {
    img {
      border 2px solid white
    }
  }

  .q-list-dark .q-item-side, .q-item-dark .q-item-side {
    color white
  }
  .q-item-side.u-drawer-brand-control .q-icon {
    font-size 28px
    font-weight bold
  }
  text-align center;

  // width 70px;
  background #212529
  color: white
  div.u-drawer-wrapper {
    @extend .column
    @extend .justify-between;
    @extend .fit;
    @extend .no-wrap;
    @extend .no-scroll;
    @extend .column;

    .q-list {
      padding-top 0
      padding-bottom 0
    }
    .q-item-label {
      font-size 18px
      font-weight 500
      letter-spacing 0.035em
    }
  }
  div.u-drawer-brand {
    cursor pointer
    height 62px
    color: $primary
    .q-item-main {
      text-align center
    }
    .q-item {
      min-height 46px
      img {
        // margin-left 10px
        height: 24px
        margin-left 2px
      }
    }
    .q-list {
      padding 0
    }
    .q-list .q-item {

      background none
    }
    span.left, span.center, span.right {
      font-family 'Lato'
      cursor pointer
      // display inline-block
      font-weight: 900;
      letter-spacing: 0.1em;
      font-size: 1.2rem;
      line-height: 45px;
      color: white
      text-transform uppercase
    }
    span.center {
      padding-left 5px
      padding-right 5px
      .q-icon {
        //padding none
        //margin none
        // letter-spacing 3px
        font-weight bold
        font-size 18px
        //text-align center
        color: red !important
        // display inline-block
      }

    }
    span.right:before, span.left:after {
      // display inline-block
      content: " "
      letter-spacing normal
    }
    span.center {
      .q-icon {
        font-style 24px
      }
    }
    .red {

    }
    // background white
    // box-shadow $shadow-4
    border none
    font-weight 900
    // display: inline-block;
    padding-top 8px
    // padding-top: .3125rem;
    padding-bottom 8px
    //padding-bottom: .3125rem;
    //margin-right: 1rem;
    white-space nowrap
    a {
      font-size 20px
      cursor pointer
      text-decoration none
      color white


    }
    vertical-align middle
    img {
      height  62px
      // padding-right 10px
      vertical-align middle
    }

  }
  .q-list.u-drawer-menu {
    padding 0
    .router-link-active.q-item {
      position relative
      background rgba(0, 0, 0, 0.3)
      color lighten($primary, 30%)
      .q-icon {
        color lighten($primary, 30%)
      }
      //&:before {
      //  left 0
      //  content: " "
      //  z-index 200
      //  display block
      //  position absolute
      //  background $primary
      //  width 3px
      //  top 10%
      //  height 80%
      //}
      border-collapse collapse

    }
    .q-item {
      letter-spacing 0.025em
      font-weight 500
      color $white
      &:hover {
        background rgba(0, 0, 0, 0.3)
      }
    }

  }
  //i, em {
  //  letter-spacing: normal;
  //  font-style normal
  //  color: white
  //  font-size 24px
  //}
  .q-btn {
    //text-transform uppercase
  }
  .u-drawer-bottom {
    margin-bottom 20px
  }
  .q-list.u-drawer-menu.q-list-sparse > .q-item, .q-item-sparse {
    padding 16px

    .q-item-icon {
      font-size 22px
      font-weight bold
    }
  }

  .q-item {
    color: $white
    q-icon {
      color $white
    }
    // border-left 3px solid transparent
  }






}
.u-drawer {
  transition: width 0.2s ease !important;
}
.q-item-side, .q-item-main {
  transition: 0.2s ease !important;
}
.q-item-label {
  white-space nowrap
}
.q-popover.u-user-popover {
  background white
  border-radius 5px
  .q-list {
    padding 0
  }
  .q-item {
    padding 8px 12px 8px 8px
    vertical-align middle
    line-height 1.1em
  }
  .q-item-side {
    min-width 20px
    width 20px
    line-height 1.1em
  }
  .q-item-main {
    font-weight 600
  }
  .q-item-section + .q-item-section {
    // margin-left 0
  }
  .q-icon {
    font-size 16px
    font-weight 600
  }
}
