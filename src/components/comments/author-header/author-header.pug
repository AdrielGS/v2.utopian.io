// component wrapper.
div.u-comments-author-header(@click.prevent="")
  // flex container.
  div.flex.header-container(v-if="!loading && account !== null")
    div.avatar
      img(:src="'https://img.blocker.press/a/' + account.name")
    div.details
      div.username.flex
        div.text()
          span.name(v-if="account._name") {{ account._name }}
          span.username @{{ account.name }}
        div.reputation
          span {{ account._reputation }}

      //div.name {{ account._name }}
      div.about {{ account._about || 'Utopian Contributor' }}
      div.location {{ account._location || 'Citizen of the World' }}

