// import highlight.js github style.
@import "~highlight.js/styles/github.css"
//@import "~highlight.js/styles/default.css"

// revert italic comments to normal.
.hljs-comment, .hljs-quote
  font-style normal !important


// code blocks should be padded.
pre > code
  padding 10px

// Change link color back to normal and remove underline
a.profile
  color inherit !important
  text-decoration none
