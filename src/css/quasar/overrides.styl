// popover style overrides.
.q-popover {
  border-radius 4px
  // inner popover q-list
  .q-list {
    padding-top 0
    padding-bottom 0
  }
  .q-item {
    min-height 1.4em
    line-height 1.4em

  }
  .q-item-side {
    min-width: 1px
  }
  .q-item-side, .q-item-main {
    & > * {
      min-height 1.2em
    }
    // display inline-block
    line-height 1.2em
    padding 4px 0
  }

}

// primary button style
.q-btn.bg-primary
  box-shadow 0 4px 10px 0 rgba(71, 134, 255, 0.4)

.q-btn.bg-primary:not(.disabled):not(.q-btn-flat):not(.q-btn-outline):not(.q-btn-push):active:before
  box-shadow: 0 5px 5px -3px rgba(71, 134, 255, 0.2), 0 8px 10px 1px rgba(71, 134, 255, 0.2), 0 3px 14px 2px rgba(71, 134, 255, 0.2);
  z-index 1

// normalize icon size.
.q-btn, .q-item {
  .q-icon {
    font-size 1em
  }
}

// global field margin.
.q-field {
  margin: 0 0 32px 0
}
